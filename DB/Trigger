
CREATE TRIGGER trgSIM_I
   ON  SIM
   AFTER INSERT
AS 
BEGIN
	SET NOCOUNT ON;

    INSERT INTO audit_SIM
	SELECT GETDATE(), 'I',* 
	FROM inserted

END
GO

CREATE TRIGGER trgSIM_U
   ON  SIM
   AFTER UPDATE
AS 
BEGIN
	SET NOCOUNT ON;

    INSERT INTO audit_SIM
	SELECT GETDATE(), 'U',* 
	FROM inserted

END
GO

CREATE TRIGGER trgSIM_D
   ON  SIM
   AFTER DELETE
AS 
BEGIN
	SET NOCOUNT ON;

    INSERT INTO audit_SIM
	SELECT GETDATE(), 'D',* 
	FROM deleted

END
GO
